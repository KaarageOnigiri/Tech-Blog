<div class="has-background-dark section">
    <div class="header-box">
        <h1 class="title is-1">My Dashboard</h1>
    </div>
</div>

<form id="edit-post-form" data="{{id}}" class="custom-add-comment-form">
    <div class="field">
        <label for="edit-post-title" class="label">Title</label>
        <div class="control">
            <input id="edit-post-title" class="input" type="text" placeholder="Insert Title here..." value="{{title}}">
        </div>
    </div>

    <div class="field">
        <label for="edit-post-content" class="label">Content</label>
        <div class="control">
            <textarea id="edit-post-content" class="textarea" type="text" placeholder="Insert content here...">{{content}}</textarea>
        </div>
    </div>

    <div class="custom-create-new-post-form">
        <button id="edit-post-button" class="button">Post</button>
    </div>
</form>

<script src="/js/edit-post.js"></script>

