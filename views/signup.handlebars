<div class="has-background-dark section">
    <div class="header-box">
        <h1 class="title is-1">The Tech Blog</h1>
    </div>
</div>

<section class="hero">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-6-desktop is-6-tablet is-6-widescreen">
                    <div class="has-background-dark top-left-right-border-radius">
                        <h2 class="title is-4 has-text-white has-text-centered padding-4">Sign Up</h2>
                    </div>
                    <form id="signup-form" class="box">
                        <div class="field">
                            <label for="name-signup" class="">Username:</label>
                            <div class="control has-icons-left">
                                <input type="username" id="name-signup" placeholder="e.g. mike" class="input">
                                <span class="icon is-small is-left">
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field">
                            <label for="email-signup" class="label">Email:</label>
                            <div class="control has-icons-left">
                                <input type="email" id="email-signup" placeholder="e.g. mike@gmail.com" class="input">
                                <span class="icon is-small is-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field">
                            <label for="password-signup" class="label">Password:</label>
                            <div class="control has-icons-left">
                                <input type="password" id="password-signup" placeholder="e.g. password" class="input" required>
                                <span class="icon is-small is-left">
                                <i class="fa fa-lock"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field custom-margin-top-2">
                            <button id="signup-submit" class="button is-success">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="alternate-choice has-text-centered">
        <h4>Already have an account? <a id="login-redirect" href="/login" class="">Click here</a></h4>
    </div>
</section>  

<script src="/js/signup.js"></script>