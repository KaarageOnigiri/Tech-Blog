<div class="has-background-dark section">
    <div class="header-box">
        <h1 class="title is-1">My Dashboard</h1>
    </div>
</div>

<form id="new-post-form" class="custom-add-comment-form">
    <div class="field">
        <label for="new-post-title" class="label">Title</label>
        <div class="control">
            <input id="new-post-title" class="input" type="text" placeholder="Insert Title here...">
        </div>
    </div>

    <div class="field">
        <label for="new-post-content" class="label">Content</label>
        <div class="control">
            <textarea id="new-post-content" class="textarea" type="text" placeholder="Insert content here..."></textarea>
        </div>
    </div>

    <div class="custom-create-new-post-form">
        <button id="create-new-post-button" class="button">Post</button>
    </div>
</form>

