{{!-- part of the header --}}
<div class="has-background-dark section">
    <div class="header-box">
        <h1 class="title is-1">The Tech Blog</h1>
    </div>
</div>

{{#each posts as |post|}}
<div class="custom-m-30 comment-box">
    <div class="has-background-dark columns">
        <h2 data="{{post.id}}" class="blogpost-title title is-4 has-text-grey-lighter padding-10 custom-margin-left-20 column is-9 custom-inline">{{post.title}}</h2>
        <p class="column is-3 custom-text-right custom-inline">Posted by <span class="custom-text-light-blue">{{user.name}}</span> on {{format_date post.createdAt}}</p>
    </div>

    <div>
        <p>{{post.content}}</p>
    </div>
</div>
{{/each}}

<script src="/js/homepage.js"></script>